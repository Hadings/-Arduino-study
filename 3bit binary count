#define LED_0 2
#define LED_1 3
#define LED_2 4
#define LED_3 5

int leds[] = { LED_0, LED_1, LED_2, LED_3, LED_4, LED_5, LED_6, LED_7, } ;

void setup() {
  for ( int i = LED_0 ; i <= LED_3 ; i++ ) {
    pinMode(i, OUTPUT);
  }
  Serial.begin(9600);

}

int count = 0 ;
void loop() {

  for (int i = 0 ; i < 4 ; i++) {
    int bit = bitRead(count, i) ;
    digitalWrite(leds[i], bit);
    
  }
  delay(1000);
  Serial.println(count++);

}

